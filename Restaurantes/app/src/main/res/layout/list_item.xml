<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imgIconList"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_launcher_background"/>

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:paddingLeft="5dp">

        <TextView
            android:id="@+id/txtNomList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nombre del restaurante"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtDescList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Descripción del restaurante"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/txtDirList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dirección y telefono"
            android:textStyle="bold"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/imgRatList"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:src="@mipmap/ic_prueba_stars"/>

</LinearLayout>